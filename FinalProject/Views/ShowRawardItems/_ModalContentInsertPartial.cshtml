@model FinalProject.ViewModels.ShowRawardDetail

<form asp-controller="ShowRawardItems" asp-action="Insert" id="postform" data-id="@Model.ShowRawardId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@Model.ShowRawardId" id="Insert@(Model.ShowRawardId)" />

    <div class="modal-header">
        <h4 class="modal-title fw-bolder" id="showDetailLabel">批次加入細項</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="input-group mb-1">
            <label class="input-group-text">選擇系列</label>
        <select id="selectSeries" class="form-select h-100" asp-items="@ViewBag.Series">
                <option>----請選擇----</option>
            </select>
        </div>
        <div class="input-group">
            <label class="input-group-text">選擇一套</label>
            <select id="selectNames" class="form-select h-100">
                
            </select>
        </div>
    </div>
    <div class="modal-footer">
        <button id="postData" type="button" class="btn btn-primary">批次新增</button>
        <button id="closeData" type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}